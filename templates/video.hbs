<section class="container">

    <div class="info-video__section">

        <div class="paragraph">
            <div class="paragraph_title">
                <p>{{titleText}}</p>
            </div>
            <div>
                <p class="paragraph_text">{{paragraphText}}
                </p>
            </div>
        </div>

        <div class="video-section"> 
            <video  controls> 
                <source src={{assetSrc videoInfo}}  type="video/mp4">
                <source src="/asset/video.ogg"  type="video/ogg">
                <source src="/asset/video.webm"  type="video/wav">
                Your browser does not support HTML5 video.
            </video>
        </div>
        
    </div>

</section>